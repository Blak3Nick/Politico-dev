extends layout

block content
	div.container-fluid
		div.row.maintext
			div.col-md-3.col-md-offset-1.col-sm-12
		div.row
			div.col-md-2.col-md-offset-9
				img(src='http://localhost:3000/images/Logo.png').displaynone.contactlogo.logo
		div.row
			div.col-md-8.col-md-offset-2
				h1.NAME Contact
				form(action='contact/send' method='POST').formstyle
						.form-group
						div.row
							div.col-md-5.top
								input.form-control(type='text' name='firstname' placeholder='First Name')
								.form-group
						div.row
							div.col-md-5
								input.form-control(type='text' name='lastname' placeholder='Last Name')
								.form-group
						div.row
							div.col-md-5
								input.form-control(type='email' name='email' placeholder='Email')
								.form-group
						div.row
							div.col-md-9
								textarea.form-control(name='message' placeholder='Questions or Comments to Curt Nicholson')
						div.row
							div.col-md-offset-9.col-md-2
								button.btn.btn-default.submitbtn(type='submit') Submit
						
